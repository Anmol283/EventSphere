<%-
  include('layout', {
    body: `
<section class="py-5">
  <div class="container">
    <div class="d-flex flex-column flex-md-row align-items-md-end justify-content-between gap-3 mb-4">
      <div>
        <h1 class="h2 fw-bold mb-1">Upcoming Events</h1>
        <p class="text-muted m-0">Find what inspires you and add it to your calendar.</p>
      </div>
      <form class="row gy-2 gx-2" method="GET" action="/events">
        <div class="col-auto">
          <input type="search" name="q" value="${q}" class="form-control" placeholder="Search events..." />
        </div>
        <div class="col-auto">
          <input type="date" name="from" value="${from}" class="form-control" />
        </div>
        <div class="col-auto">
          <button class="btn btn-primary" type="submit"><i class="fa-solid fa-magnifying-glass me-1"></i> Search</button>
        </div>
      </form>
    </div>

    <div class="row g-4">
      ${
        (events && events.length
          ? events.map(ev => `
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card h-100 card-hover shadow-sm">
                <img src="${ev.imageUrl}" class="card-img-top" alt="${ev.title}">
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title text-truncate">${ev.title}</h5>
                  <p class="card-subtitle mb-2 text-muted">${new Date(ev.date).toLocaleDateString()}</p>
                  <p class="card-text clamp-3 flex-grow-1">${ev.description}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <span class="badge bg-primary-subtle text-primary">Upcoming</span>
                    <a href="/events?q=${encodeURIComponent(ev.title)}" class="btn btn-outline-primary btn-sm">Details</a>
                  </div>
                </div>
              </div>
            </div>
          `).join("") : `
          <div class="col-12">
            <div class="alert alert-info">No events found for your filters.</div>
          </div>` )
      }
    </div>
  </div>
</section>
`})
%>
