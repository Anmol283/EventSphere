<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- Your Global Styles -->
    <link href="/css/style.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #007bff;
            --accent-pink: #ff2d95;
            --accent-blue: #7dd3fc;
            --accent-grey: #e6e9ee;
        }

        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Header Gradient */
       .admin-header {
    background: linear-gradient(135deg, #002855, #0056b3);

    color: white;
    padding: 2rem 0;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}


        /* Statistic Cards */
        .stats-card {
            background: white;
            border-radius: 15px;
            padding: 1.5rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.12);
        }
        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        /* Sections */
        .admin-section {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
        }

        /* Events */
        .event-item {
            border: 1px solid #e9ecef;
            border-radius: 10px;
            padding: 1rem;
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }
        .event-item:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        /* Messages */
        .contact-item {
            border-left: 4px solid var(--primary-color);
            background: #f8f9fa;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0 10px 10px 0;
        }

        /* Scroll */
        .contact-messages {
            max-height: 500px;
            overflow-y: auto;
        }

        /* Buttons */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        .btn-primary:hover {
            background-color: #006ae6;
            border-color: #006ae6;
        }

        .modal-header {
            background: linear-gradient(90deg, var(--accent-pink), var(--primary-color));
            color: white;
        }

        /* Button spacing */
        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: flex-end;
        }
    </style>
</head>

<body>
    <%- include('../partials/navbar') %>

    <!-- Admin Header -->
    <header class="admin-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h1 class="fw-bold mb-2">
                        <i class="fas fa-tachometer-alt me-3"></i>Admin Dashboard
                    </h1>
                    <p class="mb-0 opacity-75">Manage events and monitor activity</p>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <a href="/" class="btn btn-light me-2">
                        <i class="fas fa-home me-2"></i>View Website
                    </a>
                    <a href="/admin/logout" class="btn btn-outline-light">
                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="py-4">
        <div class="container">
            <!-- Flash Messages -->
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i><%= success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Statistics -->
            <div class="row g-4 mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card text-center">
                        <div class="stats-icon bg-primary text-white mx-auto">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h3 class="fw-bold text-primary">
                            <%= events?.length || 0 %>
                        </h3>
                        <p class="text-muted mb-0">Total Events</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card text-center">
                        <div class="stats-icon bg-success text-white mx-auto">
                            <i class="fas fa-clock"></i>
                        </div>
                        <h3 class="fw-bold text-success">
                            <%= events?.filter(e => new Date(e.date) >= new Date()).length || 0 %>
                        </h3>
                        <p class="text-muted mb-0">Upcoming Events</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card text-center">
                        <div class="stats-icon bg-info text-white mx-auto">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h3 class="fw-bold text-info">
                            <%= contactSubmissions?.length || 0 %>
                        </h3>
                        <p class="text-muted mb-0">Contact Messages</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stats-card text-center">
                        <div class="stats-icon bg-warning text-white mx-auto">
                            <i class="fas fa-history"></i>
                        </div>
                        <h3 class="fw-bold text-warning">
                            <%= events?.filter(e => new Date(e.date) < new Date()).length || 0 %>
                        </h3>
                        <p class="text-muted mb-0">Past Events</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Event Management -->
                <div class="col-lg-8">
                    <div class="admin-section">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="fw-bold mb-0">
                                <i class="fas fa-calendar-plus text-primary me-2"></i>Event Management
                            </h2>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEventModal">
                                <i class="fas fa-plus me-2"></i>Add New Event
                            </button>
                        </div>

                        <div class="events-list">
                            <% if (events && events.length > 0) { %>
                                <% events.forEach(event => { %>
                                    <div class="event-item">
                                        <div class="row align-items-center">
                                            <div class="col-md-2">
                                                <img src="<%= event.image || '/images/default.jpg' %>" 
                                                     alt="<%= event.title %>" 
                                                     class="img-fluid rounded" 
                                                     style="height: 60px; width: 80px; object-fit: cover;">
                                            </div>
                                            <div class="col-md-5">
                                                <h5 class="mb-1"><%= event.title %></h5>
                                                <p class="text-muted mb-1 small"><%= event.description.substring(0, 100) %>...</p>
                                                <small class="text-primary">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    <%= new Date(event.date).toLocaleDateString('en-US', { 
                                                        weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' 
                                                    }) %>
                                                </small>
                                            </div>
                                            <div class="col-md-2">
                                                <span class="badge <%= new Date(event.date) >= new Date() ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= new Date(event.date) >= new Date() ? 'Upcoming' : 'Past' %>
                                                </span>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="action-buttons">
                                                    <button type="button" class="btn btn-outline-primary btn-sm" 
                                                            onclick="openEditModal('<%= event._id || event.id %>', '<%= event.title.replace(/'/g, "\\'") %>', '<%= event.date %>', '<%= event.image || "" %>', '<%= event.description.replace(/'/g, "\\'").replace(/\n/g, " ") %>')">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <form action="/admin/events/<%= event._id || event.id %>?_method=DELETE" method="POST" style="display: inline;" 
                                                          onsubmit="return confirm('Are you sure you want to delete this event? This action cannot be undone.')">
                                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                    <h4 class="text-muted">No Events Yet</h4>
                                    <p class="text-muted">Start by adding your first event!</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Contact Messages -->
                <div class="col-lg-4">
                    <div class="admin-section">
                        <h2 class="fw-bold mb-4">
                            <i class="fas fa-envelope text-primary me-2"></i>Recent Messages
                        </h2>
                        <div class="contact-messages">
                            <% if (contactSubmissions && contactSubmissions.length > 0) { %>
                                <% contactSubmissions.slice(-5).reverse().forEach(submission => { %>
                                    <div class="contact-item">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="fw-bold mb-0"><%= submission.name %></h6>
                                            <small class="text-muted">
                                                <%= new Date(submission.timestamp).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <p class="text-muted mb-2 small">
                                            <i class="fas fa-envelope me-1"></i><%= submission.email %>
                                        </p>
                                        <p class="mb-0 small"><%= submission.message.substring(0, 100) %>...</p>
                                    </div>
                                <% }) %>
                                <% if (contactSubmissions.length > 5) { %>
                                    <div class="text-center mt-3">
                                        <small class="text-muted">
                                            Showing latest 5 of <%= contactSubmissions.length %> messages
                                        </small>
                                    </div>
                                <% } %>
                            <% } else { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-inbox fa-2x text-muted mb-3"></i>
                                    <p class="text-muted mb-0">No messages yet</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Event Modal -->
    <div class="modal fade" id="addEventModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-plus-circle me-2"></i>Add New Event
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/events" method="POST" id="add-event-form">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="title" class="form-label fw-semibold">Event Title *</label>
                                <input type="text" class="form-control" id="title" name="title" required placeholder="Enter event title">
                            </div>
                            <div class="col-md-6">
                                <label for="date" class="form-label fw-semibold">Event Date *</label>
                                <input type="date" class="form-control" id="date" name="date" required>
                            </div>
                            <div class="col-md-6">
                                <label for="image" class="form-label fw-semibold">Image URL</label>
                                <input type="url" class="form-control" id="image" name="image" placeholder="https://example.com/image.jpg">
                                <div class="form-text">Leave empty for default image</div>
                            </div>
                            <div class="col-12">
                                <label for="description" class="form-label fw-semibold">Description *</label>
                                <textarea class="form-control" id="description" name="description" rows="4" required placeholder="Describe your event..."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Add Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Event Modal -->
    <div class="modal fade" id="editEventModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-edit me-2"></i>Edit Event
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="edit-event-form" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="edit-title" class="form-label fw-semibold">Event Title *</label>
                                <input type="text" class="form-control" id="edit-title" name="title" required placeholder="Enter event title">
                            </div>
                            <div class="col-md-6">
                                <label for="edit-date" class="form-label fw-semibold">Event Date *</label>
                                <input type="date" class="form-control" id="edit-date" name="date" required>
                            </div>
                            <div class="col-md-6">
                                <label for="edit-image" class="form-label fw-semibold">Image URL</label>
                                <input type="url" class="form-control" id="edit-image" name="image" placeholder="https://example.com/image.jpg">
                                <div class="form-text">Leave empty for default image</div>
                            </div>
                            <div class="col-12">
                                <label for="edit-description" class="form-label fw-semibold">Description *</label>
                                <textarea class="form-control" id="edit-description" name="description" rows="4" required placeholder="Describe your event..."></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times me-2"></i>Cancel
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Auto-hide alerts
            document.querySelectorAll('.alert').forEach(alert => {
                setTimeout(() => alert.classList.add('fade'), 5000);
            });

            // Prevent invalid submissions
            const addEventForm = document.getElementById('add-event-form');
            if (addEventForm) {
                addEventForm.addEventListener('submit', e => {
                    const title = addEventForm.querySelector('#title').value.trim();
                    const date = addEventForm.querySelector('#date').value;
                    const desc = addEventForm.querySelector('#description').value.trim();
                    if (!title || !date || !desc) {
                        e.preventDefault();
                        alert('Please fill all required fields.');
                    }
                });
            }

            // Set minimum date to today
            const dateInput = document.getElementById('date');
            if (dateInput) {
                dateInput.min = new Date().toISOString().split('T')[0];
            }
            const editDateInput = document.getElementById('edit-date');
            if (editDateInput) {
                editDateInput.min = new Date().toISOString().split('T')[0];
            }
        });

        // Open Edit Modal Function
        function openEditModal(eventId, title, date, image, description) {
            const modal = new bootstrap.Modal(document.getElementById('editEventModal'));
            const form = document.getElementById('edit-event-form');
            
            // Set form action
            form.action = `/admin/events/${eventId}?_method=PUT`;
            
            // Populate form fields
            document.getElementById('edit-title').value = title;
            document.getElementById('edit-date').value = date.split('T')[0]; // Format date for input
            document.getElementById('edit-image').value = image;
            document.getElementById('edit-description').value = description;
            
            modal.show();
        }
    </script>
</body>
</html>