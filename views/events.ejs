<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <main>
        <%- include('partials/flash-messages') %>
        
        <!-- Page Header -->
        <section class="bg-primary text-white py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h1 class="display-4 fw-bold mb-3">Upcoming Events</h1>
                        <p class="lead">Discover amazing events happening near you</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Events Listing -->
        <section class="py-5">
            <div class="container">
                <div class="row mb-4">
                    <div class="col-lg-8">
                        <h2 class="h4 mb-0">
                            <i class="fas fa-calendar-alt text-primary me-2"></i>
                            All Events (<%= events.length %>)
                        </h2>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-primary active" data-filter="all">
                                <i class="fas fa-th me-1"></i>All
                            </button>
                            <button type="button" class="btn btn-outline-primary" data-filter="upcoming">
                                <i class="fas fa-clock me-1"></i>Upcoming
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row g-4" id="events-container">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(event => { %>
                            <div class="col-lg-4 col-md-6 event-item" data-date="<%= event.date %>">
                                <div class="card event-card h-100">
                                    <img src="<%= event.image %>" class="card-img-top" alt="<%= event.title %>">
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h5 class="card-title mb-0"><%= event.title %></h5>
                                            <span class="event-date">
                                                <i class="fas fa-calendar-alt me-1"></i>
                                                <%= new Date(event.date).toLocaleDateString('en-US', { 
                                                    month: 'short', 
                                                    day: 'numeric',
                                                    year: 'numeric'
                                                }) %>
                                            </span>
                                        </div>
                                        <p class="card-text flex-grow-1 text-muted"><%= event.description %></p>
                                        <div class="d-flex justify-content-between align-items-center mt-auto">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                <%= new Date(event.date) > new Date() ? 'Upcoming' : 'Past Event' %>
                                            </small>
                                            <button class="btn btn-primary btn-sm">
                                                <i class="fas fa-info-circle me-1"></i>Details
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div class="col-12">
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
                                <h3 class="text-muted">No Events Available</h3>
                                <p class="text-muted mb-4">There are currently no events scheduled. Check back soon for exciting new events!</p>
                                <a href="/contact" class="btn btn-primary">
                                    <i class="fas fa-envelope me-2"></i>Contact Us for Event Suggestions
                                </a>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Load More Button (for future pagination) -->
                <% if (events && events.length > 6) { %>
                    <div class="text-center mt-5">
                        <button class="btn btn-outline-primary btn-lg" id="load-more-btn">
                            <i class="fas fa-plus me-2"></i>Load More Events
                        </button>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Call to Action -->
        <section class="py-5 bg-light">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <h2 class="fw-bold mb-3">Want to Host Your Own Event?</h2>
                        <p class="lead text-muted mb-4">
                            Join thousands of event organizers who trust Event Sphere to bring their vision to life.
                        </p>
                        <a href="/contact" class="btn btn-primary btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Get Started
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Event filtering functionality
        document.addEventListener('DOMContentLoaded', () => {
            const filterButtons = document.querySelectorAll('[data-filter]');
            const eventItems = document.querySelectorAll('.event-item');
            
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Update active button
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    
                    const filter = button.getAttribute('data-filter');
                    const currentDate = new Date();
                    
                    eventItems.forEach(item => {
                        const eventDate = new Date(item.getAttribute('data-date'));
                        let show = true;
                        
                        if (filter === 'upcoming') {
                            show = eventDate >= currentDate;
                        }
                        
                        item.style.display = show ? 'block' : 'none';
                    });
                });
            });
        });
    </script>
    <script>
        // Example of using storage in a view
        document.addEventListener('DOMContentLoaded', () => {
            // Save last viewed events
            const currentEvents = document.querySelectorAll('.event-card').length;
            Storage.local.setItem('lastEventCount', currentEvents);
            
            // Track view in session
            const views = Storage.session.getItem('eventPageViews') || 0;
            Storage.session.setItem('eventPageViews', views + 1);
            
            // Optional: Show a returning visitor message
            const lastVisit = Storage.local.getItem('userPreferences')?.lastVisit;
            if (lastVisit) {
                const message = `Welcome back! Your last visit was ${new Date(lastVisit).toLocaleDateString()}`;
                showAlert(message, 'info');
            }
        });
    </script>
</body>
</html>
